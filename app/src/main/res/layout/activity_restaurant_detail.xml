<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.locationmanagerapp.RestaurantDetailActivity">

    <RelativeLayout
        android:id="@+id/Restaurante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:layout_margin="0sp">

        <TextView
            android:id="@+id/first_price"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:textColor="#5d5d5d"
            android:layout_marginLeft="10sp"
            android:text="S/. 10"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15sp"/>

        <TextView
            android:id="@+id/commercial_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="10sp"
            android:layout_toLeftOf="@+id/first_price"
            android:text="La Tia Jiovy"
            android:textColor="#5d5d5d"
            android:textSize="25sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/commercial_name"
            android:layout_margin="5sp">
            <TextView
                android:id="@+id/slogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5d5d5d"
                android:layout_marginLeft="5sp"
                android:text="El mejor menu de surquillo"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/full_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5d5d5d"
                android:layout_marginLeft="5sp"
                android:text="AV San Felipe 121, Surquillo - Lima"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/working_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5d5d5d"
                android:layout_marginLeft="5sp"
                android:text="De Lunes a viernes de 09:00 am a 10:00 pm"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/Pizarra"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_search"
        android:layout_below="@+id/Restaurante"
        android:scrollbars="vertical"
        android:scrollbarSize="10dp"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
        android:layout_margin="5sp"
        android:background="@drawable/pizarra">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/menutitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="El Menu del dia"
                android:textSize="20sp"
                android:layout_marginTop="15sp"
                android:textColor="@android:color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15sp"
                android:layout_below="@+id/menutitle"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>

                <RadioGroup
                    android:id="@+id/rg0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </RadioGroup>

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>

                <RadioGroup
                    android:id="@+id/rg1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                </RadioGroup>

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>

                <RadioGroup
                    android:id="@+id/rg2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                </RadioGroup>

                <TextView
                    android:id="@+id/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>

                <RadioGroup
                    android:id="@+id/rg3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                </RadioGroup>

                <TextView
                    android:id="@+id/title4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"/>

                <RadioGroup
                    android:id="@+id/rg4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                </RadioGroup>

            </LinearLayout>

        </RelativeLayout>



    </ScrollView>

    <Button
        android:id="@+id/button_search"
        android:layout_height="30sp"
        android:layout_width="200sp"
        android:background="@color/colorRedOndeway"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:text="Ordenar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
